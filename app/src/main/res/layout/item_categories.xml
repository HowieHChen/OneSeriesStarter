<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/iconlist_title_padding_h"
        android:paddingEnd="@dimen/iconlist_title_padding_h"
        android:paddingTop="@dimen/iconlist_title_padding_v"
        android:paddingBottom="@dimen/iconlist_title_padding_v"
        android:textAppearance="@style/IconListCategoryTitle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <TextView
            android:id="@+id/categoryCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/iconlist_title_padding_h"
            android:paddingEnd="@dimen/iconlist_title_padding_h"
            android:paddingTop="@dimen/iconlist_title_padding_v"
            android:paddingBottom="@dimen/iconlist_title_padding_v"
            android:textAppearance="@style/IconListCategoryCount"/>
    </LinearLayout>

</LinearLayout>