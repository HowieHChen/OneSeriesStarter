<?xml version="1.0" encoding="utf-8"?>
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">
    <foreground>
        <layer-list>
            <item android:drawable="@mipmap/sec_clock_dial" />
            <item android:drawable="@mipmap/sec_clock_second" />
            <item>
                <rotate
                    android:drawable="@mipmap/sec_clock_hour"
                    android:fromDegrees="300.0"
                    android:toDegrees="5300.0"
                    android:pivotX="50%"
                    android:pivotY="50%" />
            </item>
            <item>
                <rotate
                    android:drawable="@mipmap/sec_clock_minute"
                    android:fromDegrees="60.0"
                    android:toDegrees="60060.0"
                    android:pivotX="50%"
                    android:pivotY="50%" />
            </item>
        </layer-list>
    </foreground>
    <background android:drawable="@mipmap/sec_clock_bg"/>
</adaptive-icon>